<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi"
     xmlns:fw="http://schemas.microsoft.com/wix/FirewallExtension">
    
    <Fragment>
        <DirectoryRef Id="TARGETDIR">
            <Component Id="FirewallRules" Guid="*">
                <fw:FirewallException Id="FWException"
                                      Name="Attentive"
                                      Program="[APPLICATIONROOTDIRECTORY]Attentive.exe"
                                      Scope="any"
                                      Profile="all" />
            </Component>
        </DirectoryRef>
    </Fragment>
</Wix>
