{
    "appId": "com.attentive.teacher",
    "productName": "Attentive Teacher",
    "directories": {
        "output": "release/teacher-gpo"
    },
    "files": [
        "dist/**/*",
        "package.json"
    ],
    "extraMetadata": {
        "appMode": "teacher"
    },
    "win": {
        "target": [
            "msi"
        ],
        "forceCodeSigning": false,
        "icon": "build/icon.png"
    },
    "msi": {
        "oneClick": true,
        "perMachine": true,
        "runAfterFinish": false,
        "additionalWixArgs": [
            "-ext",
            "WixUtilExtension.dll"
        ],
        "artifactName": "${productName} GPO ${version}.${ext}"
    },
    "extraResources": [
        "teacher.flag",
        {
            "from": "build/gpo.flag",
            "to": "gpo.flag"
        },
        {
            "from": "build/elevate.exe",
            "to": "elevate.exe"
        },
        {
            "from": "build/app-update-teacher.yml",
            "to": "app-update.yml"
        }
    ],
    "publish": [
        {
            "provider": "generic",
            "url": "https://outstaller.github.io/attentive/update-manager/teacher/"
        }
    ]
}