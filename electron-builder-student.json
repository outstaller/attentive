{
    "appId": "com.attentive.student",
    "productName": "Attentive Student",
    "directories": {
        "output": "release/student"
    },
    "files": [
        "dist/**/*",
        "package.json"
    ],
    "extraMetadata": {
        "appMode": "student"
    },
    "win": {
        "target": "nsis",
        "forceCodeSigning": false,
        "icon": "build/icon.png"
    },
    "nsis": {
        "oneClick": true,
        "perMachine": false,
        "runAfterFinish": true,
        "include": "build/installer.nsh"
    },
    "extraResources": [
        "student.flag"
    ],
    "publish": [
        {
            "provider": "generic",
            "url": "https://outstaller.github.io/attentive/update-manager/student/"
        }
    ]
}