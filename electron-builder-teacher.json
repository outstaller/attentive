{
    "appId": "com.attentive.teacher",
    "productName": "Attentive Teacher",
    "directories": {
        "output": "release/teacher"
    },
    "files": [
        "dist/**/*",
        "package.json"
    ],
    "extraMetadata": {
        "appMode": "teacher"
    },
    "win": {
        "target": [
            "nsis",
            "msi"
        ],
        "forceCodeSigning": false,
        "icon": "build/icon.png"
    },
    "msi": {
        "oneClick": true,
        "perMachine": false,
        "runAfterFinish": true,
        "additionalWixArgs": [
            "-ext",
            "WixUtilExtension.dll"
        ]
    },
    "nsis": {
        "oneClick": true,
        "perMachine": false,
        "runAfterFinish": true,
        "include": "build/installer.nsh"
    },
    "extraResources": [
        "teacher.flag",
        {
            "from": "build/elevate.exe",
            "to": "elevate.exe"
        }
    ],
    "publish": [
        {
            "provider": "generic",
            "url": "https://outstaller.github.io/attentive/update-manager/teacher/"
        }
    ]
}