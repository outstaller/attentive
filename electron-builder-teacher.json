{
    "appId": "com.attentive.teacher",
    "productName": "Attentive Teacher",
    "directories": {
        "output": "release/teacher"
    },
    "files": [
        "dist/**/*",
        "package.json"
    ],
    "extraMetadata": {
        "appMode": "teacher"
    },
    "win": {
        "target": "nsis",
        "forceCodeSigning": false,
        "icon": "build/icon.png"
    },
    "nsis": {
        "oneClick": false,
        "perMachine": true,
        "allowToChangeInstallationDirectory": true,
        "include": "build/installer.nsh"
    },
    "extraResources": [
        "teacher.flag"
    ],
    "publish": [
        {
            "provider": "generic",
            "url": "https://outstaller.github.io/attentive/update-manager/teacher/"
        }
    ]
}